/* pages/index/index.wxss */
.search-wrapper, .text-wrapper{
  display: flex;
  align-items: center;
}
.top-wrapper{
  margin: 20rpx;
  padding: 20rpx 30rpx;
  height: 100%;
  background-color: white;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}
.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}
.line-2{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 5rpx 0;
}
.chart-tips{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.account-list{
  margin: 0 20rpx;
  padding: 10rpx 0 ;
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 5px;
  margin-bottom: 10rpx;
}
.btn-wrapper{
  display: flex;
  justify-content: space-between;
}
